<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayout_Home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/app_background_hdpi"
    android:gravity="bottom"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imLogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/relLayout_Home"
        android:layout_alignTop="@id/relLayout_Home"
        android:padding="10dp"
        android:paddingBottom="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_white_hdpi" />

    <TableLayout
        android:id="@+id/tblHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/imLogo"
        android:layout_gravity="center_horizontal|fill"
        android:layout_margin="15dp"
        android:layout_marginTop="0dp"
        android:padding="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="top"
            android:padding="0dp" >

            <ImageButton
                android:id="@+id/btnPIN_Launcher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:onClick="onClick_PIN"
                android:scaleType="fitStart"
                android:src="@drawable/home_buttons_pin" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnBudget_Launcher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/home_buttons_budget" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="top"
            android:padding="0dp" >

            <ImageButton
                android:id="@+id/ImageButton03"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnChart_Launcher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/home_buttons_chart" />

            <ImageButton
                android:id="@+id/ImageButton02"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="top"
            android:padding="0dp" >

            <ImageButton
                android:id="@+id/btnSettings_Launcher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/home_buttons_settings" />

            <ImageButton
                android:id="@+id/ImageButton04"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/btnWeb_Launcher"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/app_button_bg_xparent"
                android:scaleType="fitStart"
                android:src="@drawable/home_buttons_web" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/txtCopyright"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="@string/copyright"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/col_main"
        android:textSize="20dp" />

</RelativeLayout>